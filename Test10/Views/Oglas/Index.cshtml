@model IEnumerable<Test10.Models.Oglas>
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole("Igrac"))
{

    <h2 style="color:white"><b>Oglasi</b></h2>

    
    <table class="table" id="tableOglas">
        <thead>
            <tr>
                <th>
                    Teniski klub
                </th>
                <th>
                    Datum i vrijeme
                </th>
                <th>
                    Naslov
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opis)
                </th>
                <th>
                    Igrač
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeniskiKlub.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazivOglas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Igrac.Ime)
                    @Html.DisplayFor(modelItem => item.Igrac.Prezime)
                </td>
                <td>
                    @if (item.IgracId == UserManager.GetUserId(User))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdOglas">Uredi</a>
                        <a asp-action="Delete" asp-route-id="@item.IdOglas">Obriši</a>
                    }
                    @if (item.IgracId != UserManager.GetUserId(User))
                    {
                        <a asp-action="Odgovor" asp-controller="Porukas" asp-route-IdPosiljatelj="@item.IgracId">Pošalji poruku</a>
                    }
                        

                    <!--<a asp-action="Details" asp-route-id="@item.IdOglas">Details</a>-->

                </td>
            </tr>
            }
        </tbody>
    </table>
}

@section scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableOglas').DataTable({
                language: {
                    search: "Pretraga",
                    info: "_START_ - _END_ (ukupno _TOTAL_)",
                    lengthMenu: "Prikaži _MENU_ zapisa",
                    paginate: {
                        first: "Prva",
                        previous: "Prethodna",
                        next: "Sljedeća",
                        last: "Zadnja"
                    },
                    emptyTable: "Nema podataka za prikaz",
                    info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
                    infoEmpty: "Nema podataka za prikaz",
                    infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
                }
            });
        });
    </script>
}


