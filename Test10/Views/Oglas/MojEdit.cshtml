@model Test10.Models.Oglas

@{
    ViewData["Title"] = "MojEdit";
}
<style>
    body {
        background-image: url(/images/ball-court-design-209977123.jpg);
        background-size: cover;
    }

    .povratak {
        background-color: white;
    }
</style>


<h2 style="color:white"><b>Uredi</b></h2>

<div class="row">
    <div class="col-md-4" style="height:auto;padding-bottom:10px;padding-top:10px;background-color:#d9d9d9;border-radius: 15px;">
        <form asp-action="MojEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOglas" />
            <div class="form-group">
                <label asp-for="NazivOglas" class="control-label">Naslov</label>
                <input asp-for="NazivOglas" class="form-control" />
                <span asp-validation-for="NazivOglas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <!--  <div class="form-group">
                <label asp-for="IgracId" class="control-label"></label>
                <select asp-for="IgracId" class="form-control" asp-items="ViewBag.IgracId"></select>
                <span asp-validation-for="IgracId" class="text-danger"></span>
            </div> -->
            <div class="form-group">
                <label asp-for="TeniskiKlubId" class="control-label">Teniski klub</label>
                <select asp-for="TeniskiKlubId" class="form-control" asp-items="ViewBag.TeniskiKlubId"></select>
                <span asp-validation-for="TeniskiKlubId" class="text-danger"></span>
            </div>
            <div class="form-group" align="center">
                <input type="submit" value="Spremi" class="btn btn-success" /> |
                <a class="btn btn-default" asp-action="MojiOglasi">Povratak na popis</a>
            </div>
        </form>
    </div>
</div>


